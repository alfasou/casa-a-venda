{
	"compilerOptions": {
		"outDir": "dist/js",
		"target": "ES6",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
